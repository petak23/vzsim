<script src="{$basePath}/front/js/run/vue_blok_statusbar_run.js"></script>
<script src="{$basePath}/front/js/run/vue_blok_ui_run.js"></script>
<script src="{$basePath}/front/js/run/vue_blok_zoznam_run.js"></script>
<script src="{$basePath}/front/js/run/vue_main_run.js"></script>